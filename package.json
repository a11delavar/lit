{
	"name": "@a11d/lit",
	"version": "0.3.2",
	"description": "A thin wrapper around the Lit library",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/a11delavar/lit.git"
	},
	"keywords": [
		"lit"
	],
	"author": "a11delavar",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/a11delavar/lit/issues"
	},
	"homepage": "https://github.com/a11delavar/lit#readme",
	"files": [
		"dist"
	],
	"type": "module",
	"module": "./dist/index.js",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsc && webpack build",
		"dev": "node ./scripts/test.mjs",
		"release": "npm run build && npm version patch --no-git-tag-version && npm publish",
		"test": "node ./scripts/test.mjs && karma start --single-run"
	},
	"watch": {
		"dev": {
			"patterns": [
				"packages"
			],
			"extensions": "ts"
		}
	},
	"dependencies": {
		"csstype": "x",
		"@a11d/constructor": "x",
		"lit": "2.x"
	},
	"devDependencies": {
		"@a11d/eslint-config": "x",
		"terser-webpack-plugin": "5.x",
		"ts-loader": "9.x",
		"tsconfig-paths-webpack-plugin": "4.x",
		"typescript": "5.x",
		"resolve-typescript-plugin": "x",
		"webpack": "5.x",
		"webpack-cli": "4.x",
		"karma": "x",
		"karma-chrome-launcher": "x",
		"karma-firefox-launcher": "x",
		"karma-helpful-reporter": "x",
		"karma-jasmine": "x",
		"@types/jasmine": "x",
		"concurrently": "x",
		"esbuild": "0.x",
		"npm-watch": "0.x"
	}
}
